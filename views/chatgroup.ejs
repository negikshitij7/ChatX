<%- include('layouts/header.ejs') %>

<h2 class="mb-4">Group chat</h2>

<div class="row">

<div class="col-md-3">
    <ul class="list-group">
          <% 
            if(createdgroups.length >0)
            {
                
                for(let i=0;i<createdgroups.length;i++)
                {
                    %> 
                   <li class="list-group-item list-group-item-dark mb-1 cursor-pointer group-list" data-id="<%=createdgroups[i]['_id']%>" data-name="<%=createdgroups[i]['name']%>">
                    
                    <img src="<%='http://127.0.0.1:3000/'+createdgroups[i]['image']%>" alt="" width="50px" height="50px">
                    <%=createdgroups[i]['name']%>

                    </li>
                      <%       
                }
                
            }
            if(joinedgroups.length >0)
            {
                
                for(let i=0;i<joinedgroups.length;i++)
                {
                    %> 
                   <li class="list-group-item list-group-item-dark mb-1 cursor-pointer group-list" data-id="<%=joinedgroups[i]['groupId']['_id']%>"  data-name="<%=joinedgroups[i]['groupId']['name']%>">
                    
                    <img src="<%='http://127.0.0.1:3000/'+joinedgroups[i]['groupId']['image']%>" alt="" width="50px" height="50px">
                    <%=joinedgroups[i]['groupId']['name']%>

                    </li>
                      <%       
                }
                
            }
            
            %>

    </ul>
</div>

<div class="col-md-9">
<h3 class="group-start-head">Click and Start the Chat</h3>
  <div class="group-chat-section">
    
     <div class="pl-3" id="group-chat-container"></div>
   


<form action="" id="group-chat-form">
  <input type="text" name="message" id="group-message" placeholder="Enter Message" class="border" required>
  <input type="submit" value="Send message" class="btn btn-primary" required>
  
  </form>

    </div>

</div>


</div>


<!--Delete Modal -->
<div class="modal fade" id="deletegroupchatmodal"tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Delete chat</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form id="deletegroupchatform">
      <div class="modal-body">

        <input type="hidden" name="id" id="delete-group-message-id">
        <p>Are you sure you want to delete this message?</p>
          <p><b id="deletegroupmessage"></b></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-danger">Delete</button>
      </div>
      </form>

    </div>
  </div>
</div>

<!--Edit Modal -->
<div class="modal fade" id="editgroupchatmodal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Edit chat</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form id="editgroupchatform">
      <div class="modal-body">

        <input type="hidden" name="id" id="edit-group-message-id">
        <p>Edit Message</p>
          <p><b id="editgroupmessage"></b></p>
          <input type="text" name="message" id="update-group-message" placeholder="Enter message" required>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-danger">Edit</button>
      </div>
      </form>

    </div>
  </div>
</div>

<%- include('layouts/footer.ejs') %>